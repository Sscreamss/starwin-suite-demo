{
  "name": "botdash",
  "version": "1.0.1",
  "description": "Dashboard de gesti√≥n para WhatsApp Bot con Google Sheets",
  "author": "Martin Kroh",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "build": "electron-builder --win --x64",
    "build:portable": "electron-builder --win portable --x64",
    "build:all": "electron-builder --win --x64",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.botdash.app",
    "productName": "BotDash",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.md",
      "!.gitignore",
      "!.vscode",
      "!node_modules/puppeteer/.local-chromium/**/*",
      "!dist",
      "!release"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "BotDash"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "extraResources": [
      {
        "from": "credentials",
        "to": "credentials",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "config",
        "to": "config",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "axios": "^1.6.0",
    "axios-cookiejar-support": "^4.0.0",
    "googleapis": "^126.0.0",
    "puppeteer-core": "^21.0.0",
    "qrcode-terminal": "^0.12.0",
    "tough-cookie": "^4.1.3",
    "whatsapp-web.js": "github:timothydillan/whatsapp-web.js#fix/duplicate-events-and-bindings"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0"
  }
}